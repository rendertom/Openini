<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.rendertom.openini</id>
    <name>Openini</name>
    <vendor url="https://www.rendertom.com">renderTom</vendor>
    <description>
        Gets added on build process from build.gradle.kts > pluginDescription() method.
    </description>

    <depends>com.intellij.modules.platform</depends>
    <extensions defaultExtensionNs="com.intellij">
        <notificationGroup id="Openini notifications" displayType="BALLOON"/>
    </extensions>

    <actions>
        <group id="wrapper">
            <group id="Openini.Container" popup="true" text="Openini" icon="/icon.svg">
                <action id="Openini.OpenFileSublime" class="com.rendertom.openini.OpenFileSublime"
                        text="Open File in Sublime Text"/>
                <action id="Openini.OpenProjectSublime" class="com.rendertom.openini.OpenProjectSublime"
                        text="Open Project in Sublime Text"/>
                <action id="Openini.OpenURLSublime" class="com.rendertom.openini.OpenURLSublime"
                        text="Get Sublime Text"/>
                <separator/>
                <action id="Openini.OpenFileVSCode" class="com.rendertom.openini.OpenFileVSCode"
                        text="Open File in VSCode"/>
                <action id="Openini.OpenProjectVSCode" class="com.rendertom.openini.OpenProjectVSCode"
                        text="Open Project in VSCode"/>
                <action id="Openini.OpenURLVSCode" class="com.rendertom.openini.OpenURLVSCode" text="Get VSCode"/>
            </group>

            <separator/>

            <add-to-group group-id="ChangesViewPopupMenu" anchor="last"/>
            <add-to-group group-id="Diff.EditorPopupMenu" anchor="last"/>
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
            <add-to-group group-id="EditorTabPopupMenu" anchor="last"/>
            <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
        </group>
    </actions>
</idea-plugin>